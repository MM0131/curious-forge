{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["@nuxt/types", "@types/node"]
  },
  "exclude": ["node_modules"]
}